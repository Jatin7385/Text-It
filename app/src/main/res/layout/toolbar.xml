<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232d36">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="WhatsApp"
            android:textColor="#939ca3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="161dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/title"
            android:background="@drawable/ic_baseline_search_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#939ca3" />

        <!--The string in the text of the button below brings the three dots-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#232d36">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tablayout"
            android:background="#232d36"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="#00FF00"
            app:tabIndicatorColor="#00FF00">

        </com.google.android.material.tabs.TabLayout>


    </RelativeLayout>

</RelativeLayout>