<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232d36">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="WhatsApp"
            android:textColor="#939ca3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="131dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@+id/title"
            android:background="@drawable/ic_baseline_search_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#939ca3" />
        <!--The string in the text of the button below brings the three dots-->
        <Button
            android:id="@+id/threedots"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/title"
            android:text="&#8942;"
            android:textSize="30dp"
            android:textFontWeight="1000"
            android:textColor="#939ca3"
            android:backgroundTint="#232d36"
            app:backgroundTint="#939ca3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#232d36">

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="350dp"
            android:background="@drawable/ic_baseline_camera_alt_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#939ca3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chats_button"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:backgroundTint="#232d36"
                android:text="CHATS"
                android:textColor="#939ca3"/>

            <Button
                android:id="@+id/status_button"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:backgroundTint="#232d36"
                android:text="STATUS"
                android:textColor="#939ca3"/>

            <Button
                android:id="@+id/calls_button"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:backgroundTint="#232d36"
                android:text="CALLS"
                android:textColor="#939ca3"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>