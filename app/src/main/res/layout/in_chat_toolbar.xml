<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232d36">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="362dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/profilepic"
            android:text="Hello blud"
            android:textAlignment="center"
            android:textColor="#939ca3"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginStart="-355dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/back_button"
            app:srcCompat="@drawable/circular" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@+id/name"
            android:background="@drawable/ic_baseline_videocam_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/name"
            android:background="@drawable/ic_baseline_call_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/name"
            android:background="@drawable/ic_baseline_call_24"
            android:backgroundTint="#232d36"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/threedots"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-17dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="-5dp"
            android:layout_toEndOf="@+id/title"
            android:text="&#8942;"
            android:textSize="45dp"
            android:textFontWeight="1000"
            android:textColor="#FFFFFF"
            android:backgroundTint="#232d36"
            app:backgroundTint="#FFFFFF" />
    </RelativeLayout>
</RelativeLayout>