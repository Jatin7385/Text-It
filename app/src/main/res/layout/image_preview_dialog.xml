<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232d36">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Chosen_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chosen Image"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Chosen_image_title"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_centerInParent="true"/>

        <EditText
            android:id="@+id/image_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:backgroundTint="#182022"
            android:background="@drawable/chat_keyboard_layout"
            android:padding="15dp"
            android:hint="Enter message"
            android:textColorHint="@color/white"/>


        <Button
            android:id="@+id/preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="SEND"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="#00FF00"/>
    </LinearLayout>

</RelativeLayout>