<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyotpActivity"
    android:background="#101d25">

    <TextView
        android:id="@+id/otp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00FF00"
        android:textSize="30dp"
        android:text="Enter the OTP"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ph_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#00FF00"
        android:textSize="30dp"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_below="@id/otp_title"
        android:textStyle="normal"/>


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ph_num"
        android:gravity="center_horizontal">
        
        <EditText
            android:id="@+id/inputotp1"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>

        <EditText
            android:id="@+id/inputotp2"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/inputotp3"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/inputotp4"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/inputotp5"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/inputotp6"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/otp_box"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Didn't recieve the otp?"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="RESEND OTP AGAIN"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <Button
        android:id="@+id/next_button_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#00FF00"
        android:padding="10dp"
        android:text="Submit"
        android:textColor="@color/black" />

</RelativeLayout>